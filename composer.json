{
    "name": "emscherland/phpids",
    "description": "PHPIDS (PHP-Intrusion Detection System) is a simple to use, well structured, fast and state-of-the-art security layer for your PHP based web application",
    "keywords": [
        "security",
        "web",
        "ids",
        "firewall",
        "waf",
        "phpids"
    ],
    "type": "library",
    "license": "LGPL-3.0+",
    "homepage": "https://github.com/Emscherland/PHPIDS",
    "authors": [
        {
            "name": "Bea",
            "email": "beahub@emscherland.de"
        }
    ],
    "require": {
        "php": "^8.3",
        "ezyang/htmlpurifier": "^4.13.0",
        "ext-mbstring": "*",
        "ext-json": "*",
        "ext-simplexml": "*",
        "ext-libxml": "*"
    },
    "require-dev": {
        "phpunit/phpunit": "^9.5"
    },
    "replace": {
        "phpids/phpids": "^0.7"
    },
    "autoload": {
        "psr-0": {
            "IDS\\Tests": "tests/",
            "IDS": "lib/"
        }
    }
}
